generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email   String   @unique
  role String
  img_url String
  password Password?
  course Course[]
}

model Password {
  id Int @id @default(autoincrement())
  user User @relation(fields: [user_id], references: [id])
  hash String
  user_id Int @unique
}

model Course {
  id Int @id @default(autoincrement())
  title String
  note String
  content Json
  img1 String
  img2 String
  img3 String
  img4 String
  user_id Int
  user User @relation(fields: [user_id],references: [id])
}

