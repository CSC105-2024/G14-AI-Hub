generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {

  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  role     String
  img_url  String    @default("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png")
  img_id   String?
  password Password?
  course   Course[]
}

model Password {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [user_id], references: [id])
  hash    String
  user_id Int    @unique
}

model Course {
  id      Int    @id @default(autoincrement())
  title   String
  note    String @default("")
  content Json

  img1    String
  img1_id String

  img2    String
  img2_id String

  img3    String
  img3_id String

  img4    String
  img4_id String

  created_at DateTime @default(now())
  created_by String @default("")

  user_id Int
  user    User @relation(fields: [user_id], references: [id])
}

model TempPassword {
  id    Int    @id @default(autoincrement())
  email String @unique
  hash  String
}
